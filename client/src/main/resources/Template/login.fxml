<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="760.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdemo.controller.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="76.0" prefWidth="626.0" text="E-Learning-System" underline="true">
                    <font>
                        <Font name="System Bold" size="53.0" />
                    </font>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="100.0" minHeight="50.0" prefHeight="100.0" prefWidth="600.0" text="Softwaretechnik 2022/2023&#10;Gruppe Montag 2" textAlignment="CENTER">
                    <tooltip>
                        <Tooltip text="Rashid Gorkhmaz&#10;Ghazal Hodaei&#10;Miłosz Jankowski&#10;Jinsun Ryu&#10;Nermine Wasef&#10;" />
                    </tooltip>
                    <VBox.margin>
                        <Insets bottom="40.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="usernameField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Nutzerkürzel">
                    <VBox.margin>
                        <Insets bottom="10.0" left="200.0" right="200.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="passwordField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Passwort">
                    <VBox.margin>
                        <Insets left="200.0" right="200.0" />
                    </VBox.margin>
                </PasswordField>
                <Label fx:id="errorMessageLabel" textFill="#cc4c4c" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Registrieren">
                            <HBox.margin>
                                <Insets top="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#login" text="Anmelden">
                            <HBox.margin>
                                <Insets left="26.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Button mnemonicParsing="false" style="-fx-background-color: ffffff;" text="Schließen" visible="false">
